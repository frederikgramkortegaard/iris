# Test if with boolean variables
fn test_if_bool_vars() -> f64 {
    var condition: bool = true

    if condition {
        return 1
    } else {
        return 0
    }
}

# Test while with boolean literal
fn test_while_bool() -> f64 {
    var x: f64 = 0
    while false {
        x = x + 1
    }
    return x
}

